<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="#282D30"
    android:descendantFocusability="beforeDescendants"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/item_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_media_play"/>
    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/item_more"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/button_title_more"/>

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_toLeftOf="@+id/item_duration"
        android:layout_toRightOf="@+id/item_play"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:maxLines="1"
            android:textSize="16dp"
            tools:text="暗号"
            android:textColor="@android:color/secondary_text_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_title" />
        <TextView
            android:textSize="10dp"
            tools:text="周杰伦"
            android:textColor="#A1A5A8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_artist" />
    </LinearLayout>

    <TextView
        android:layout_marginRight="8dp"
        android:id="@+id/item_duration"
        tools:text="03:00"
        android:textColor="#A1A5A8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/item_more"
        android:layout_toStartOf="@+id/item_more" />


</RelativeLayout>